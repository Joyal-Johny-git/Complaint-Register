@model task.Models.Assignment


@{ ViewBag.Title = "Work Assignment"; }

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Edit", "Assignments", FormMethod.Post))
{
@Html.AntiForgeryToken()

                @Html.HiddenFor(model => model.ComplaintID)
                                @Html.HiddenFor(model => model.AssignmentID)

                                                <div class="form-group">
                                                    @Html.LabelFor(model => model.ComplaintID)
                                                    @Html.TextBoxFor(model => model.ComplaintID, new { @class = "form-control", @readonly = "readonly" })
                                                </div>
                                                  
                                                                                                                <div class="form-group">
                                                                                                                    @Html.LabelFor(model => model.WorkDone)
                                                                                                                    @Html.TextAreaFor(model => model.WorkDone, new { @class = "form-control" })
                                                                                                                </div>
                                                                                                                                <div class="form-group">
                                                                                                                                    @Html.LabelFor(model => model.MaterialsUsed)
                                                                                                                                    @Html.TextAreaFor(model => model.MaterialsUsed, new { @class = "form-control" })
                                                                                                                                </div>
                                                                                                                                                <div class="form-group">
                                                                                                                                                    @Html.LabelFor(model => model.Cost)
                                                                                                                                                    @Html.TextBoxFor(model => model.Cost, new { @class = "form-control" })
                                                                                                                                                </div>
                                                                                                                                                                <div class="form-group">
                                                                                                                                                                    @Html.LabelFor(model => model.Status)
                                                                                                                                                                    @Html.DropDownListFor(model => model.Status, new SelectList(new[] { "New", "In Progress", "Hold" }), new { @class = "form-control" })
                                                                                                                                                                </div>
                                                                                                                                                                                <div class="form-group">
                                                                                                                                                                                    @Html.LabelFor(model => model.TechnicianID)
                                                                                                                                                                                    @Html.DropDownList("TechnicianID", (SelectList)ViewBag.Technicians, "Select Technician", new { @class = "form-control" })
                                                                                                                                                                                </div>

                                                                                                                                                                                                <input type="submit" value="Update" class="btn btn-primary" />}